@{
    ViewData["Title"] = "Delete Bowler";
}

@model Bowler

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.BowlerFirstName @Model.BowlerMiddleInit @Model.BowlerLastName?</h3>

<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="BowlerList" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="BowlerID" />
</form>